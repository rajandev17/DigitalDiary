<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/student_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:src="@drawable/def_user" />

    <com.rajanks.digitaldiary.UI.CustomViews.AmazeTextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/student_image"
        android:gravity="center"
        android:text="Rajan ks"
        app:font="elite"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.rajanks.digitaldiary.UI.CustomViews.AmazeTextView
        android:id="@+id/student_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/student_image"
        android:lines="2"
        app:font="elite"
        android:text="Roll number : 36, 5th class C section"
        android:textColor="@color/gef"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gcc"></View>
</RelativeLayout>